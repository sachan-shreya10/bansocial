    <div>
         <form name="theForm" action="/auth/sortteacher" method="post" enctype="multipart/form-data" autocomplete="off">
            <div class="form-group" >
                <label for="tags"><span style="color:white">Sort by:</span></label>
                <select id="tags" name="tag" onchange="theForm.submit()">
                    <option value="null"></option>
                    <option value="ALL">ALL</option>
                    <option value="CS">CS</option>
                    <option value="IT">IT</option>
                    <option value="EC">EC</option>
                    <option value="EEE">EEE</option>
                    <option value="EI">EI</option>
                    <option value="MT">MT</option>
                    <option value="BT">BT</option>
                </select>
            </div>
        </form>
        </div>
    <div class="container my-3 content">
        {{!-- rgb(27, 26, 26) --}}
        <h2 style="color:white;text-align:center;">DOUBTS !</h2>
        <form action="/auth/annteacher" method="post" enctype="multipart/form-data"  autocomplete="off">
            <div class="card">
                <div class="card-body">
                    {{!-- <h5 class="card-title">ADD DOUBT</h5> --}}
                    {{!-- <form action="/auth/register" method="post"> --}}
                        <h6 class="card-title">TITLE</h6>
                        <div class="form-group" style="display:inline-block;">
                            <textarea class="form-control inputt" name="title" id="addTask" rows="1"></textarea>
                        </div>
                        <div class="form-group" style="display: inline-block;">
                            <label for="tags">Choose a tag:</label>
                            <select id="tags" name="tag">
                                <option value="CS">CS</option>
                                <option value="IT">IT</option>
                                <option value="EC">EC</option>
                                <option value="EEE">EEE</option>
                                <option value="EI">EI</option>
                                <option value="MT">MT</option>
                                <option value="BT">BT</option>
                            </select>
                        </div>

                        <h6 class="card-title">DESCRIPTION</h6>
                        <div class="form-group">
                            <textarea class="form-control inputt" name="textt" id="addTask" rows="2"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="file" name="pic" id="addpic" accept="image/*">
                        </div>
                        <button type="submit" class="btn btn-primary my-2" id="addBtn">POST</button>
                </div>
            </div>
        </form>
        <div id="tasks" class="announ row container-fluid" style="padding: 0;">
            {{#each resul}}
            <div class="noteCard my-2 mx-2 card" style="background: rgba(255,255,255,0.85);">
                <div class="card-body row">
                    {{#if this.img}}
                    <div>
                        <img src="/{{this.img}}" class="card-img-top" alt="..." height="320">
                    </div>
                    {{/if}}
                    <div>
                        <div style="float:right">
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                data-bs-target="#exampleModal{{this.id}}" style=" display: inline; ">
                                Comment
                            </button>
                            <form action="/auth/commrteacher" method="post" enctype="multipart/form-data"  autocomplete="off"
                                style="display: inline;">
                                <input type="hidden" name="pidd" value="{{this.id}}" />
                                <button type="submit" class="btn btn-primary my-2 btn-sm" id="addBtnr">View
                                    Discussion</button>


                            </form>
                        </div>
                        <div style="margin-top:0.5rem">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.des}}<span style="color: blue;">#{{this.tag}}</span>
                            </p>
                        </div>
                        <div>
                            <h6 style="color: gray;display:inline">{{this.name}} {{this.date}}</h6>
                            <form action="/auth/dtr" method="post"  autocomplete="off" style="float:right">
                             <input type="hidden" name="diid" value="{{this.id}}">
                            <div class="dropdown" style="display: inline;">
                                <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                                    id="dropdownMenuButton{{this.id}}" data-bs-toggle="dropdown" aria-expanded="false">
                                </button>
                                <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton{{this.id}}" name="option">
                                    {{#ifEquals this.email ../userEmail}}
                                    <li><button class="btn bg-transparent" type="submit" name="deletebtn"
                                            value="{{this.id}}">Delete</button></li>
                                    {{else}}        
                                    <li><button class="btn bg-transparent" type="submit" name="reportbtn"
                                            value="{{this.id}}">Report</button></li>
                                    {{/ifEquals}}        
                                </ul>
                            </div>
                            </form>
                        </div>
                        <div class="modal fade" id="exampleModal{{this.id}}" tabindex="-1"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Reply</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/auth/comm1teacher" method="post" enctype="multipart/form-data"  autocomplete="off">
                                            <input type="hidden" name="pid" value="{{this.id}}" />
                                            <textarea class="form-control inputt" name="contentr" id="addTask"
                                                rows="1"></textarea>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Post</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                        {{!--
                        <hr>
                        </hr> --}}



                    </div>
                </div>
            </div>
            {{else}}
            <h4>No Doubts!</h4>
            {{/each}}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>
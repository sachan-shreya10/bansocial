<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/login.css">
    <title>Login Page</title>
</head>

<body>
         {{#if message}}
    <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
    <section class="Form my-3 mx-5" >
        <div class="container" style="width: 160vh;">
            <div class="row g-0" style="height:95vh;">
                <div class="col-lg-4" >
                    <img src="/images/image6.jpg" class="img-fluid" alt=""
                        style="width:640px;height:95vh;border-top-left-radius:30px;border-bottom-left-radius:30px;">
                </div>
                <div class="col-md-8 px-5 pt-5" >
                    <span style="color:rgb(187, 187, 7);font-size: 32pt;">बन</span>
                    <span style="color:rgb(196, 8, 8);font-size: 32pt;">Social</span>
                    <h4>Sign in to your account</h4>
                    <form action="/auth/login" method="post">
                        <div class="form-row">
                            <div class="col-md-8">
                                <input type="email" placeholder="Email-Address" class="form-control my-3 p-4" name="email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8">
                                <input type="password" placeholder="********" class="form-control my-3 p-4" name="password">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8">
                                <button type="submit" class="btn1 mt-3 mb-5">Login</button>
                            </div>
                        </div>
                        {{!-- <a href="#">Forgot Password</a> --}}
                        <p>Don't have an account? <a href="/register">Register here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


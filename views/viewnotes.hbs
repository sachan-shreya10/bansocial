    {{#ifEquals "Admin" userName}}
    <div>
        <form name="formr" action="/auth/shown" method="post">
            {{!-- <button type="submit" class="btn btn-primary btn-sm" id="rbtn">View Reported Posts</button> --}}
            <div class="form-group" style="position: fixed;">
                <label for="tags"><span style="color:white">Sort by:</span></label>
                <select id="tags" name="option" onchange="formr.submit()">
                    <option value="null"></option>
                    <option value="0">All Posts</option>
                    <option value="1">Reported Posts</option>
                </select>
            </div>
        </form>
    </div>
    {{/ifEquals}}
    <div class="center">
        <br>
        <h1>{{subject}} NOTES</h1>
        <br>
    </div>
    <div class="container my-3 content">
        <form action="/auth/viewnotes" method="post" enctype="multipart/form-data">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Want to share {{subject}} notes? </h4>
                    <p>Make sure that the document to be uploaded has the name (in capital letter) as :
                        <b>chapter/topic.pdf</b> <br>(eg : NORMALIZATION.pdf)
                    </p>
                    <hr>
                    <div class="form-group">
                        <input type="file" name="doc" id="adddoc"></input>
                    </div>
                    <h6>Name</h6>
                    <textarea class="form-control inputt" name="fname" id="fname" rows="1"></textarea>
                    <button type="submit" class="btn btn-primary my-2" id="addBtn" name="subject"
                        value="{{subject}}">Upload</button>
                </div>
            </div>
        </form>
        <div id="tasks" class="notes row container-fluid">
            {{#each resul}}
            <div class="noteCard my-2 mx-2 card" style="width: 100%;">
                <div class="card-body">
                    <h7>{{this.name}}</h7>
                    <form action="/auth/notes_reports" method="post">
                        <input type="hidden" name="id" value="{{this.nid}}">
                        <input type="hidden" name="subject" value="{{../subject}}">
                        <div class="dropdown" style="display:inline;float:right">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                                id="dropdownMenuButton{{this.nid}}" data-bs-toggle="dropdown" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton{{this.nid}}"
                                name="option">
                                {{#ifEquals "Admin" ../userName}}
                                <li><button class="btn bg-transparent" type="submit" name="deletebtn"
                                        value="{{this.nid}}">Delete</button></li>
                                {{#ifEquals this.reports 1}}
                                <li><button class="btn bg-transparent" type="submit" name="ureportbtn"
                                        value="{{this.nid}}">Unreport</button></li>
                                {{/ifEquals}}
                                {{else}}
                                {{#ifEquals this.email ../userEmail}}
                                <li><button class="btn bg-transparent" type="submit" name="deletebtn"
                                        value="{{this.nid}}">Delete</button></li>
                                {{else}}
                                <li><button class="btn bg-transparent" type="submit" name="reportbtn"
                                        value="{{this.nid}}">Report</button></li>
                                {{/ifEquals}}
                                {{/ifEquals}}
                            </ul>
                        </div>
                    </form>
                    <a href="/{{this.link}}"><button type="button"
                            class="btn btn-success btn-sm float-right">Download</button></a>
                </div>
            </div>
            {{else}}
            <h3>No Resources Yet!</h3>
            {{/each}}
        </div>

                        <a class="nav-link" href="/dashboard" style="color: black;">{{userName}}</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link" href="/profile" style="color: black;">{{userName}}</a>
                    </li>

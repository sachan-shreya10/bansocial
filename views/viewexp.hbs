    {{#ifEquals "Admin" userName}}
    <div>
        <form name="formr" action="/auth/showe" method="post">
            {{!-- <button type="submit" class="btn btn-primary btn-sm" id="rbtn">View Reported Posts</button> --}}
            <div class="form-group" style="position: fixed;">
                <label for="tags"><span style="color:white">Sort by:</span></label>
                <select id="tags" name="option" onchange="formr.submit()">
                    <option value="null"></option>
                    <option value="0">All Posts</option>
                    <option value="1">Reported Posts</option>
                </select>
            </div>
        </form>
    </div>
    {{/ifEquals}}
    <div class="container my-3 content">

        <h1>{{expname}} EXPERIENCE OF {{company}}</h1>
        <br>
        <form action="/auth/viewexp" method="post" enctype="multipart/form-data" autocomplete="off">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Want to share your {{expname}} experience for {{company}}? </h4>
                    <p>Make sure that the document to be uploaded has the name as :
                        <b>internship/placement duration.pdf</b> <br>(eg : 2020.pdf)
                    </p>
                    <hr>
                    <div class="form-group">
                        <input type="file" name="doc" id="adddoc">
                    </div>
                    <input type="hidden" name="expname" value="{{expname}}"></input>
                    <input type="hidden" name="company" value="{{company}}"></input>
                    <h6>Name</h6>
                    <textarea class="form-control inputt" name="fname" id="fname" rows="1"></textarea>
                    <button type="submit" class="btn btn-primary my-2" id="addBtn">Upload</button>
                </div>
            </div>
        </form>
        <div id="tasks" class="announ row container-fluid">
            {{#each resul}}
            <div class="noteCard my-2 mx-2 card" style="width: 100%;">
                <div class="card-body">
                    <h7>{{this.fname}}</h7>
                    <form action="/auth/exp_reports" method="post">
                        <input type="hidden" name="id" value="{{this.eid}}">
                        <input type="hidden" name="expname" value="{{../expname}}">
                        <input type="hidden" name="company" value="{{../company}}">
                        <div class="dropdown" style="display:inline;float:right">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                                id="dropdownMenuButton{{this.eid}}" data-bs-toggle="dropdown" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu text-center" aria-labelledby="dropdownMenuButton{{this.eid}}"
                                name="option">
                                {{#ifEquals "Admin" ../userName}}
                                <li><button class="btn bg-transparent" type="submit" name="deletebtn"
                                        value="{{this.eid}}">Delete</button></li>
                                {{#ifEquals this.reports 1}}
                                <li><button class="btn bg-transparent" type="submit" name="ureportbtn"
                                        value="{{this.eid}}">Unreport</button></li>
                                {{/ifEquals}}
                                {{else}}
                                {{#ifEquals this.email ../userEmail}}
                                <li><button class="btn bg-transparent" type="submit" name="deletebtn"
                                        value="{{this.eid}}">Delete</button></li>
                                {{else}}
                                <li><button class="btn bg-transparent" type="submit" name="reportbtn"
                                        value="{{this.eid}}">Report</button></li>
                                {{/ifEquals}}
                                {{/ifEquals}}
                            </ul>
                        </div>
                    </form>
                    <a href="/{{this.link}}"><button type="button"
                            class="btn btn-success btn-sm float-right">Download</button></a>
                </div>
            </div>
            {{else}}
            <h3>No Resources Yet!</h3>
            {{/each}}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>
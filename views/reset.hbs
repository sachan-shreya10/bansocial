<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Reset Password</title>
</head>

<body style="background-color: aliceblue;">
    <div class="container my-3 content">
        <form  action="/auth/editpass" method="post" enctype="multipart/form-data" autocomplete="off">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Enter New Password</h6>
                    <div class="form-group">
                        <input type="password" placeholder="********" name="password">
                        <h6 class="card-title">Confirm Password</h6>
                        <input type="password" placeholder="********" name="cpassword">
                    </div>
                    <button type="submit" class="btn btn-primary my-2" id="addBtn">UPDATE</button>
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>
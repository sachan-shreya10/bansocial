<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/register.css">
    <title>Register Page</title>
</head>

<body>
    <section class="Form my-4 mx-5">
        {{#if message}}
        <h4 class="alert alert-danger mt-2">{{message}}</h4>
        {{/if}}
        <div class="container">
            <div class="row g-0">
                <div class="col-md-5">
                    <img src="/images/image6.jpg" class="img-fluid" alt=""
                        style="width:640px;height:760px;border-top-left-radius:30px;border-bottom-left-radius:30px;">
                </div>
                <div class="col-md-7 px-5 pt-5">

                    <img src="/images/logosvg1.svg" alt="" width="50" height="60">
                    <span style="color:rgb(187, 187, 7);font-size: 32pt;">बन</span>
                    <span style="color:rgb(196, 8, 8);font-size: 32pt;">Social</span>
                    <h4>Register Here</h4>
                    <form action="/auth/register" method="post">
                        <div class="form-row">
                            <div class="col-md-7">
                                <h6>Are you a teacher or a student??</h6>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="role" id="flexRadioDefault1"
                                        value="teacher" onclick="tvalidation()" />
                                    <label class="form-check-label" for="flexRadioDefault1">Teacher</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="role" id="flexRadioDefault2"
                                        value="student" onclick="svalidation()">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Student
                                    </label>
                                </div>

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-7">
                                <input type="name" placeholder="Full Name" name="name" class="form-control my-3 p-2"
                                    required />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-7">
                                <input type="email" placeholder="Email-Address" name="email"
                                    class="form-control my-3 p-2" id="email" onblur="validation();" required />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-7">
                                <input type="id" name="bid" placeholder="ID" class="form-control my-3 p-2" id="bid"
                                    onblur="bvalidation()" style="display:none; " >
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-7">
                                <input type="password" placeholder="********" name="password" id="password"
                                    class="form-control my-3 p-2" onblur="pvalidation();" required />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-7">
                                <input type="password" placeholder="Confirm Password" name="cpassword"
                                    class="form-control my-3 p-2" required />
                            </div>
                        </div>
                        <h6 id='year' style="display:none;">Select Year</h6>
                        <div class="form-check form-check-inline year" id='year1' style="display:none;">
                            <input class="form-check-input" type="radio" value="1" name="year" id="flexRadioDefault3">
                            <label class="form-check-label" for="flexRadioDefault3">1st Year</label>
                        </div>
                        <div class="form-check form-check-inline year" id='year2' style="display:none;">
                            <input class="form-check-input" type="radio" value="2" name="year" id="flexRadioDefault4">
                            <label class="form-check-label" for="flexRadioDefault4">
                                2nd Year
                            </label>
                        </div>
                        <div class="form-check form-check-inline year" id='year3' style="display:none;">
                            <input class="form-check-input" type="radio" value="3" name="year" id="flexRadioDefault5">
                            <label class="form-check-label" for="flexRadioDefault5">3rd Year</label>
                        </div>
                        <div class="form-check form-check-inline year" id='year4' style="display:none;">
                            <input class="form-check-input" type="radio" value="4" name="year" id="flexRadioDefault6">
                            <label class="form-check-label" for="flexRadioDefault6">
                                4th Year
                            </label>
                        </div>
                        <div class="form-row">
                            <div class="col-md-7">
                                <input type="department" placeholder="Department" name="dept"
                                    class="form-control my-3 p-2" required />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-7">
                                <button type="submit" class="btn1 mt-3 mb-5">Sign up</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            {{!-- {{#if message}}
            <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}} --}}
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script>
        function validation() {


            const form = document.getElementById('form');
            const email = document.getElementById('email').value;
            const pattern = /^[^ ]+@banasthali.in$/;
            if (email.match(pattern)) {
            }
            else {
                document.getElementById("email").value = "";
                document.getElementById("email").style.borderColor = "red";
            }


        }
        function pvalidation() {

            const pw = document.getElementById('password').value;
            if (pw.length < 8) {
                alert("Password length must be atleast 8 characters");
                document.getElementById("password").value = "";
            }
            if (pw.length > 15) {
                alert("Password length must not exceed 15 characters")
                document.getElementById("password").value = "";
            }

        }
        function bvalidation() {

            const pw = document.getElementById('bid').value;
            if (pw.length < 10) {
                alert("Incorrect Id");
                document.getElementById("bid").value = "";
            }
            if (pw.length > 10) {
                alert("Incorrect Id");
                document.getElementById("bid").value = "";
            }

        }
        function svalidation() {

            const role = document.getElementById('flexRadioDefault2').checked;
            if (role) {

                document.getElementById('bid').style.display = '';
                document.getElementById('year1').style.display = '';
                document.getElementById('year2').style.display = '';
                document.getElementById('year3').style.display = '';
                document.getElementById('year4').style.display = '';
                document.getElementById('year').style.display = '';



            }

        }
        function tvalidation() {

            const role = document.getElementById('flexRadioDefault1').checked;
            if (role) {

                document.getElementById('bid').style.display = 'none';
                document.getElementById('year1').style.display = 'none';
                document.getElementById('year2').style.display = 'none';
                document.getElementById('year3').style.display = 'none';
                document.getElementById('year4').style.display = 'none';
                document.getElementById('year').style.display = 'none';



            }

        }

    </script>
</body>

</html>
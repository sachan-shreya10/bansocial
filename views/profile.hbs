<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/profile.css">
    <title>Profile</title>
</head>

<body>
    <nav class="navbar  navbar-expand-lg navbar-light bg-light"
        style="font-family: Georgia, 'Times New Roman', Times, serif;">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="navbar-brand" href="#">
                            <img src="/images/logo1.svg" alt="" width="30" height="24"><span
                                style="color:rgb(187, 187, 7);font-size: 18pt;">बन</span><span style="color:rgb(196, 8, 8);font-size: 16pt;">Social</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/home">Home</a>
                    </li>
                </ul>
            </div>
            <div class="mx-2">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <!-- <a class="nav-link" href="#">Log Out</a> -->
                         <a class="nav-link" href="/logout" style="text-decoration: none;color:rgb(218, 212, 212);background-color:rgb(23, 29, 29);border-radius: 5px">Log Out</a> 
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    {{!-- <section class="h-100 gradient-custom-2"> --}}
        <div class="container-fluid pb-1 pt-4 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7" style="width: 100%;">
                    <div class="card">
                        <div class="rounded-top text-white d-flex flex-row"
                            style="background-color: #000; height:200px;" >
                            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                {{#each result}}
                                {{#if this.pro_pic}}
                                <img src="/{{this.pro_pic}}"
                                    alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                    style="width: 120px; z-index: 1">
                                {{else}}    
                                     <img src="/images/default_pro.png"
                                    alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                    style="width: 120px; z-index: 1">
                                {{/if}}    
                                {{!-- <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                                    style="z-index: 1;">
                                    Edit profile
                                </button> --}}
                                {{!-- <h5><span style="color: #000;">hello</span></h5> --}}
                                {{!-- <a href="/editpro" style="z-index: 1;text-decoration:none;color:#000;font-size:large;">Edit Profile</a> --}}
                            </div>
                            {{!-- {{#each result}} --}}
                            <div class="ms-3" style="margin-top:95px;">
                                <h5>{{this.name}}</h5>
                                {{#if this.year}}
                                <p>Student | {{this.department}} | {{this.year}} Year</p>
                                {{else}}
                                <p>Teacher | {{this.department}}</p>
                                {{/if}}
                            </div>
                             {{/each}}
                        </div>
                        <div class="p-4 text-black" style="background-color: #f8f9fa;">
                            <div class="d-flex justify-content-end text-center py-1">
                                <div>
                                    {{!-- <p class="mb-1 h5">253</p>
                                    <p class="small text-muted mb-0">My Doubts</p> --}}
                                    <a href="/editpro" style="z-index: 1;text-decoration:none;color:rgb(218, 212, 212);background-color:rgb(25, 31, 31);border-radius: 2px;font-size:large">Edit Profile</a>
                                </div>
                            </div>
                        </div>
                 </div>
                </div>
            </div>
        </div>
    </section>
    <div class="pt-1 pb-4 px-2 gradient-custom-2">
        <div class="py-4">
            <h5 style="font-weight:bold;text-align:center">My {{topic}}</h5>
            <div id="tasks" class="announ row container-fluid">
            {{#each resul}}
            <div class="noteCard my-2 mx-2 card" >
                <div class="card-body row">
                    {{#if this.img_url}}
                    <div class="col-md-4">
                        <img src="/{{this.img_url}}" class="card-img-top" alt="..." height="180">
                    </div>
                    {{/if}}
                    <div class="col-md-8">
                         {{!-- <h5 class="card-title" style=" display: inline;"><span style="font-size: small;color:grey">{{this.date}} </span>
                        </h5> --}}
                        <div style="margin-top:0.5rem">
                            <h5 class="card-title">{{this.title}} <span style="font-size: small;color:grey">{{this.date}}</h5>
                            <p class="card-text">{{this.content}} </p>
                            {{!-- <span style="color: blue;">#{{this.tag}}</span> --}}
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <h3>No Doubts!</h3>
            {{/each}}  
        </div>
        </div>
    </div>
    <footer>
        <div class="text-center text-white p-2" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2022 Copyright:
            <a class="text-white" href="#">BvSocial.com</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>